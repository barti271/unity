#!/bin/bash


pushd `dirname $0` > /dev/null
BASE_DIR=`pwd`
popd > /dev/null
BASE_DIR=`dirname "$BASE_DIR"` 


. "${BASE_DIR}"/conf/startup.properties


if [ -e "$PID" ]
 then
  if [ -d /proc/$(cat "$PID") ]
   then
     echo "A UNITY instance may be already running with process id "$(cat $PID)
     echo "If this is not the case, delete the file $PID and re-run this script"
     exit 1
   fi
fi

CP=.$(find -L "$LIB" -type d -exec printf ":{}/*" \;) 

if [ -n "$LIB_LOCAL" ]
then
        CP_LOCAL=$(find -L "$LIB_LOCAL" -type d -exec printf ":{}/*" \;)
        CP="$CP$CP_LOCAL"
fi

export CLASSPATH=$CP

PWD="`pwd`"
cd "$BASE_DIR"

RUN_COMMAND="$JAVA ${MEM} ${OPTS} ${DEFS} pl.edu.icm.unity.engine.server.UnityApplication ${PARAM}"
if [ "${AUTHBIND}" ]
then
        nohup "${AUTHBIND}" --deep ${RUN_COMMAND} >& "$STARTLOG" &
else
        nohup ${RUN_COMMAND} >& "$STARTLOG" &
fi

cd "$PWD"
 
echo $! > "$PID"
